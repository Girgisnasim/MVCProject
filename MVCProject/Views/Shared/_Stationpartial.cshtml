@model List<Trip>

@foreach(var t in Model)
{
    <div class="card mb-3" style="max-width:800px; height:200px">
        <div class="row g-0">
            <div class="col-md-6 bg-light">
                <img src="~/images/@t.image" class="img-fluid rounded-start" alt="..." style="width:400px;height:200px">
            </div>
            <div class="col-md-6 bg-light">
                <div class="card-body" style="width:400px;height:200px">
                    <h5 class="card-title"><i class="fas fa-map-marker-alt"></i> Trip to: @t.Name</h5>
                    <p class="card-text"><i class="fas fa-info-circle"></i> @t.Status</p>
                    <p class="card-text"><i class="fas fa-chair"></i> Available Seats: @t.Available_Seats</p>
                    <p class="card-text"><small class="text-muted">Hurry up and book the package</small></p>
                </div>
            </div>
        </div>
    </div>
    <div class="card bg-primary text-light" style="width: 18rem;height:200px">
        <div class="card-body">
            <p class="card-title"><i class="far fa-calendar-alt"></i> Date: @t.Departure_Date</p>
            <p class="card-title"><i class="fas fa-money-bill"></i> Price: @t.Price</p>
            <p class="card-title"><i class="far fa-user"></i> Per Person</p>

            <a class="btn btn-outline-light" href="~/Tickets/GetTrip/@t.Id">Book Now!</a>
        </div>
    </div>

}