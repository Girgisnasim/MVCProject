@model MVCProject.ViewModels.RegisterUserViewModel

@{
    Layout = "_Layout1";
    ViewData["Title"] = "Register";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Page</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <!-- Font Awesome CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <!-- Your custom CSS -->
    <style>

        /* img{
                    width: 2000px;
                    height: 100%;
                } */
        img {
            width: 80px;
        }

        .background-image {
            width: 99%;
            height: 750px;
            display: block;
        }

        .container.main {
            width: 300px;
            height: 500px;
            position: absolute;
            top: 50%;
            left: 20%;
            transform: translate(-50%, -50%);
            border: solid 2px;
            border-width: 1px;
            padding: 10px;
            border-radius: 10px;
            background-color: rgba(255, 255, 255, 0.7);
        }

        .input-field {
            position: relative;
            margin-bottom: 20px;
        }

            .input-field input {
                width: 100%;
                padding: 10px;
                /*  border: none; */
                border: double;
                background-color: cornflowerblue; /* Opaque white background */
                border-radius: 5px;
                outline: none;
            }

        .login-icon {
            position: absolute;
            left: 10px;
            top: 50%;
            transform: translateY(-50%);
            color: #333; /* Adjust icon color */
        }

        h1 {
            text-align: center;
            /*   color:cornflowerblue; */
        }
    </style>
</head>
<body>

    <img class="background-image" src="https://wallpapercave.com/wp/wp7642016.jpg" alt="Background Image">

    <div class="container main ">
        <h1>SIGN UP</h1>
<form asp-action="Register">
   
    <div class="form-group">
        <label asp-for="UserName" class="control-label"><i class="fas fa-user"></i> User Name</label>
        <input asp-for="UserName" class="form-control" />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>
   
    <div class="form-group">
        <label asp-for="Password" class="control-label"><i class="fas fa-lock"></i> Password</label>
        <input asp-for="Password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ConfirmPassword" class="control-label"><i class="fas fa-lock"></i> Confirm Password</label>
        <input asp-for="ConfirmPassword" class="form-control" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="Address" class="control-label"><i class="fas fa-map-marker-alt"></i> Address</label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Sign Up" class="btn btn-outline-primary" />
       
    </div>
            <div class="signin">
                <span>already have an account? <a asp-controller="Account" asp-action="Login">Login</a></span>
            </div>
</form>
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
    </div>

    <!-- Bootstrap JS, jQuery, and Popper.js -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.9.3/umd/popper.min.js"></script>
    <script src="~/js/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

</body>
</html>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
