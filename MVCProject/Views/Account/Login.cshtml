@model MVCProject.ViewModels.LoginViewModel
@using Microsoft.AspNetCore.Mvc.ViewFeatures;

@{
    Layout = "_Layout1";
    ViewData["Title"] = "Login";
}




<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Page</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <!-- Font Awesome CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <!-- Your custom CSS -->
    <style>
      
        /* img{
            width: 2000px;
            height: 100%;
        } */
        img{
            width:80px;
        }
        .background-image {
            width: 99%;
            height:750px;
            display: block;
            
        }

        .container.main {
            width:300px;
            height:500px;
            position: absolute;
            top: 50%;
            left: 20%;
            transform: translate(-50%, -50%);
            border:solid 2px;
            border-width: 1px;
            padding: 10px;
            border-radius: 10px;
            background-color: rgba(255, 255, 255, 0.7);
          
        }

        .input-field {
            position: relative;
            margin-bottom: 20px;
   
        }

        .input-field input {
                width: 100%;
                padding: 10px;
               /*  border: none; */
                border: double;
              /*   background-color:cornflowerblue; /* Opaque white background */ */
                border-radius: 5px;
                outline: none;
        }

       .login-icon {
            position: absolute;
            left: 10px;
            top: 50%;
            transform: translateY(-50%);
            color: #333; /* Adjust icon color */
        }
        h1{
            text-align:center;
          /*   color:cornflowerblue; */
        }
    </style>
</head>
<body>

    <img class="background-image" src="https://wallpapercave.com/wp/wp7642016.jpg" alt="Background Image">

    <div class="container main ">
        <h1>LOGIN</h1><br />
        <form asp-action="Login" method="post">
            <div class="input-field col-12">
                <label for="name"><i class="fas fa-user"></i> User Name</label><br />
                <input type="text" id="name" asp-for="UserName" required autocomplete="off" placeholder="User Name">
             
            </div>
            <div class="input-field col-12">
                <label for="pass"><i class="fas fa-lock"></i> Password</label><br /> 
                <input type="password" id="pass" asp-for="Password" required placeholder="Password">
                
            </div>
            <br />
            <div class="input-field col-12">
                <input type="submit" class="btn btn-primary" value="Login">
            </div><br />
            <div class="signin">
                <span>Create an account? <a asp-controller="Account" asp-action="Register">Sign Up here</a></span>
            </div>
        </form>
    </div>

    <!-- Bootstrap JS, jQuery, and Popper.js -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.9.3/umd/popper.min.js"></script>
    <script src="~/js/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

</body>
</html>






@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
