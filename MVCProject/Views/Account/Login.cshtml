@model MVCProject.ViewModels.LoginViewModel
@using Microsoft.AspNetCore.Mvc.ViewFeatures;

@{
    Layout = "_Layout";
    ViewData["Title"] = "Login";
}
<style>
    h1{
        text-align:center;
        margin-right:20px;
        color:black;
    }
    .row{
        margin-left:500px;
        width:300px;
        height:400px;
        border: solid 1px;
        background-image: url('https://wallpapercave.com/wp/wp9764032.png');
      
        /*   background-color:lightskyblue; */
   /*      background-image: url('assets/images/0002.jpg'); */
    }
</style>
<h1>Welcome to Booking website</h1>
<br />
<br />
<div class="row">
  
    <div class="col-md-12">
        <form asp-action="Login">
            <div asp-validation-summary="All" class="text-danger"></div>
            <h1>Login</h1>

            <br />
           
            <div class="form-group">
                <label asp-for="UserName" class="control-label"></label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="RememberMe" /> @Html.DisplayNameFor(model => model.RememberMe)
                </label>
            </div>
          
            <br />
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-outline-primary" />
                <a class="" asp-action="Register">  Create an Account</a>
            </div>
           
            <br />
           
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
