@model List<Trip>
<h1> Company Trips </h1>
<style>

    h1 {
        color: black;
        text-align: center;
        margin-top: 100px
    }
    div{
        display:flex;
    }
   
    p {
        text-align: center;
    }
    
</style>
<div class="container">
     @foreach (var item in Model)
        {
    <div class="row">
       
            <div class="col-md-4">
                <div class="mb-4">
                    <div class="d-flex flex-column align-items-center">
                        <img src="@item.image" style="width:300px;height:300px" alt="image" class="mb-2" />
                        <h4>@item.Name</h4>
                        <p>@item.Location</p>
                        <p>Total Seats: @item.Total_Seats</p>
                        <p>Arrival Time: @item.Arrival_Time</p>
                        <p>Departure Time: @item.Departure_Time</p>
                        <p>Departure Date: @item.Departure_Date</p>
                    </div>
                    @* <div class="d-flex justify-content-center">
