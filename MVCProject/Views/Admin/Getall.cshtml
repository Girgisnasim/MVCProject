                        <button onclick="window.location.href='/Admin/delete/@item.Id'" class="btn btn-outline-primary"> Delete </button>
                    </div> *@
                    <div class="mt-2">
                        <p>Price: @item.Price</p>
                        <p>Available Seats: @item.Available_Seats</p>
                        <p>Status: @item.Status</p>
                    </div>
                </div>
            </div>
       
    </div>
    }
</div>
